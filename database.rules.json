{
  "rules": {
    "users": {
      ".read": true,
      ".write": true,
      "$uid": {
        ".read": "auth != null && auth.uid == $uid",
        ".write": "auth != null && auth.uid == $uid"
      }
    },
    "actions": {
      ".read": true,
      ".write": "root.child('users/' + auth.uid).exists() && root.child('users/' + auth.uid + '/role').val() == 'super'"
    }
  }
}